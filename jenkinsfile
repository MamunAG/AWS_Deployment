pipeline {
    agent any
 
    environment {
        registry = '1almamun/aws_docker_example'
        registryCredentialUp = 'docker_up'
        dockerImage = ''
    }

    stages {
        stage('Start') {
            steps {
                echo 'Pipeline start.'
            }
        }

        stage('Deployment') {
            steps {
                echo 'Deployment start.'
            }
        }

        stage('Checkout SCM') {
            steps{
                script{
                    git credentialsId: 'github_UP',
                    url: 'https://github.com/MamunAG/AWS_Deployment.git',
                    branch: 'main'
                }
            }
        }

        stage('Updating kubernetes deploymnet file') {
            steps{
                script{
                    sh """
                    cat deployment.yaml
                    sed -t 's/${APP_NAME}.*/${APP_NAME}:${IMAGE_TAG}/g' deployment.yaml
                    cat deployment.yaml 
                    """
                }
            }
        }

        stage('Push the changed deployment file to Git') {
            steps{
                script{
                    sh """
                        git config --global user.name "MamunAG"
                        git config --global user.email "mamun166036@yahoo.com"
                        git add deployment.yaml
                        git commit -m "updated the deployment file"
                    """
                    withCredentials([gitUsernamePassword(credentialsId: 'github', gitToolName:'Default')]){
                        sh "git push https://github.com/MamunAG/AWS_Deployment.git main"
                    }

                }
            }
        }
    }
}
