pipeline {
    agent any
 
    environment {
        APP_NAME = 'aws_docker_example'
        registryCredentialUp = 'docker_up'
        dockerImage = ''
    }

    stages {
        stage('Start') {
            steps {
                echo 'Pipeline start.'
            }
        }

        stage('Deployment') {
            steps {
                echo 'Deployment start.'
            }
        }

        stage('Checkout SCM') {
            steps{
                script{
                    git credentialsId: 'github_uk',
                    url: 'https://github.com/MamunAG/AWS_Deployment.git',
                    branch: 'master'
                }
            }
        }

        stage('Updating kubernetes deploymnet file') {
            steps{
                script{
                    sh """
                    cat k8s/deployment.yaml
                    sed -i 's/${APP_NAME}.*/${APP_NAME}:${IMAGE_TAG}/g' k8s/deployment.yaml
                    cat k8s/deployment.yaml 

git remote add origin https://github.com/MamunAG/AWS_Deployment.git
                    """
                }
            }
        }
stage('Update GIT') {
  steps {
    script {
      catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
        withCredentials([usernamePassword(credentialsId: 'github_uk', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
            def encodedPassword = URLEncoder.encode("$GIT_PASSWORD",'UTF-8')
            sh "git config user.email mamun166036@yahoo.com"
            sh "git config user.name MamunAG"
            sh "git add ."
            sh "git commit -m 'Triggered Build: ${env.BUILD_NUMBER}'"
            sh "git push https://github.com/MamunAG/AWS_Deployment.git"
        }
      }
    }

  }
}

        stage('Push the changed deployment file to Git') {
            steps{
                script{
                    sh """
                        git config --global user.name "MamunAG"
                        git config --global user.email "mamun166036@yahoo.com"
                        git add k8s/deployment.yaml
                        git commit -m "updated the deployment file"
                    """
                    withCredentials([gitUsernamePassword(credentialsId: 'github_uk', gitToolName:'Default')]){
                        sh "git push origin HEAD:master"
                    }

                }
            }
        }
    }
}
